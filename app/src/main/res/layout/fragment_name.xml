<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".NameFragment">


    <EditText
        android:id="@+id/userEditText"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/button_layout_1"
        android:drawableStart="@drawable/ic_fagian_notification"
        android:drawablePadding="12dp"
        android:hint="Scrivi il tuo nome"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        android:drawableLeft="@mipmap/ic_launcher_foreground"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"/>

    <Button
        android:id="@+id/userButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/userEditText"
        android:layout_marginTop="40dp"
        android:text="Non premere"
        android:textAllCaps="false"
        android:background="@drawable/button_layout_1"
        android:textColor="@color/black"
 />

</RelativeLayout>