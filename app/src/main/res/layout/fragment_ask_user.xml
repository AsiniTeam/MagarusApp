<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background2"
    tools:context=".AskUserFragment">



    <EditText
        android:id="@+id/inviteEditText"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/edit_text_layout"
        android:drawableStart="@drawable/ic_fagian_notification"
        android:drawableLeft="@drawable/ic_fagian_notification"
        android:drawablePadding="12dp"
        android:hint="Invite User"
        android:paddingStart="20dp"
        android:paddingLeft="12dp"
        android:paddingEnd="12dp"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.387"
        android:ellipsize="end"
        android:singleLine="true"
        android:paddingRight="12dp" />

    <Button
        android:id="@+id/inviteButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="72dp"
        android:text="Send"
        android:textAllCaps="false"
        android:background="@drawable/button_layout_1"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inviteEditText" />


</androidx.constraintlayout.widget.ConstraintLayout>